<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/sfondo">
    
    
<TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Square dimension:"></TextView>

<Spinner android:id="@+id/tableDimension" android:layout_height="wrap_content" android:layout_width="fill_parent"></Spinner>
<CheckBox android:text=" Show Next" android:id="@+id/showNext" android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
<Button android:id="@+id/SaveBtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Apply"></Button>
<TextView android:id="@+id/debug" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""></TextView>


</LinearLayout>